#include <iostream>
using namespace std;
double lightyear2asunit(double);
int main()
{
	cout << "enter the number of light year: ";
	double light_year;
	cin >> light_year;
	cout << light_year << " light years = " << lightyear2asunit(light_year) << " astronomical units." << endl;
	system("pause");

	return 0;
}

double lightyear2asunit(double n)
{
	return 63240*n;
}
